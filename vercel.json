{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node",
      "config": {
        "nodeVersion": "22.x",
        "includeFiles": ["api/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/index.m3u",
      "dest": "/api/m3u.js"
    },
    {
      "src": "/stream",
      "dest": "/api/index.js"
    }
  ]
}
